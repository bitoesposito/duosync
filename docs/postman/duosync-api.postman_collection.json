{
	"info": {
		"name": "DuoSync API",
		"description": "Complete API collection for DuoSync application. Includes authentication, timeline, and interval management endpoints.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "duosync"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Check Auth",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/check",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "check"]
						},
						"description": "Checks if user is authenticated via token cookie. Returns user information if authenticated, otherwise false."
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/logout",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "logout"]
						},
						"description": "Deletes authentication token from cookie, logging out the user."
					},
					"response": []
				},
				{
					"name": "Passkey Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"name\": \"Test User\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/passkey/register",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "passkey", "register"]
						},
						"description": "Generates WebAuthn registration options for a new passkey. Supports both new user registration and adding passkeys to existing accounts (when user is authenticated)."
					},
					"response": []
				},
				{
					"name": "Passkey Verify Registration",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"credential\": {\n    \"id\": \"credential-id-base64url\",\n    \"rawId\": \"credential-raw-id-base64url\",\n    \"response\": {\n      \"clientDataJSON\": \"client-data-json-base64url\",\n      \"attestationObject\": \"attestation-object-base64url\"\n    },\n    \"type\": \"public-key\"\n  },\n  \"email\": \"test@example.com\",\n  \"name\": \"Test User\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/passkey/verify-registration",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "passkey", "verify-registration"]
						},
						"description": "Verifies WebAuthn registration response and stores passkey credential. Creates new user if email doesn't exist, otherwise adds passkey to existing account."
					},
					"response": []
				},
				{
					"name": "Passkey Discover",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/passkey/discover",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "passkey", "discover"]
						},
						"description": "Generates authentication options for discoverable credentials (without email). Used for passkey login from home page."
					},
					"response": []
				},
				{
					"name": "Passkey Verify Discover",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"credential\": {\n    \"id\": \"credential-id-base64url\",\n    \"rawId\": \"credential-raw-id-base64url\",\n    \"response\": {\n      \"clientDataJSON\": \"client-data-json-base64url\",\n      \"authenticatorData\": \"authenticator-data-base64url\",\n      \"signature\": \"signature-base64url\",\n      \"userHandle\": \"user-handle-base64url\"\n    },\n    \"type\": \"public-key\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/passkey/verify-discover",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "passkey", "verify-discover"]
						},
						"description": "Verifies authentication with discoverable credentials. Returns authentication token if successful."
					},
					"response": []
				},
				{
					"name": "Magic Link Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/magic-link/request",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "magic-link", "request"]
						},
						"description": "Generates and sends a magic link via email to allow access on other devices. The magic link allows access without passkey."
					},
					"response": []
				},
				{
					"name": "Magic Link Verify",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/magic-link/verify?token=verification-token",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "magic-link", "verify"],
							"query": [
								{
									"key": "token",
									"value": "verification-token",
									"description": "Verification token from magic link email"
								}
							]
						},
						"description": "Verifies magic link token and creates authentication session. Returns redirect to dashboard or JSON response if Accept: application/json header is present."
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for passkey and magic link authentication"
		},
		{
			"name": "Timeline",
			"item": [
				{
					"name": "Get Timeline",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/timeline?date=2024-01-15&userIds={{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "timeline"],
							"query": [
								{
									"key": "date",
									"value": "2024-01-15",
									"description": "Date in YYYY-MM-DD format"
								},
								{
									"key": "userIds",
									"value": "{{userId}}",
									"description": "Comma-separated list of user IDs"
								}
							]
						},
						"description": "Calculates timeline for given date and user IDs. Returns array of timeline segments (busy intervals and free slots) formatted in user's timezone."
					},
					"response": []
				}
			],
			"description": "Timeline calculation endpoints"
		},
		{
			"name": "Intervals",
			"item": [
				{
					"name": "Get Intervals",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/intervals?date=2024-01-15",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals"],
							"query": [
								{
									"key": "date",
									"value": "2024-01-15",
									"description": "Date in YYYY-MM-DD format"
								}
							]
						},
						"description": "Gets all intervals for authenticated user for a specific date."
					},
					"response": []
				},
				{
					"name": "Create Interval",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"start_ts\": \"2024-01-15T10:00:00Z\",\n  \"end_ts\": \"2024-01-15T12:00:00Z\",\n  \"category\": \"busy\",\n  \"description\": \"Team meeting\",\n  \"recurrence_rule\": null\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/intervals",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals"]
						},
						"description": "Creates a new busy interval. Supports recurrence rules for repeating intervals."
					},
					"response": []
				},
				{
					"name": "Create Interval with Recurrence",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"start_ts\": \"2024-01-15T09:00:00Z\",\n  \"end_ts\": \"2024-01-15T10:00:00Z\",\n  \"category\": \"sleep\",\n  \"description\": \"Daily sleep schedule\",\n  \"recurrence_rule\": {\n    \"type\": \"daily\",\n    \"daysOfWeek\": [1, 2, 3, 4, 5, 6, 7],\n    \"until\": \"2024-12-31T23:59:59Z\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/intervals",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals"]
						},
						"description": "Creates a recurring interval. Example: daily sleep schedule."
					},
					"response": []
				},
				{
					"name": "Create Weekly Recurring Interval",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"start_ts\": \"2024-01-15T14:00:00Z\",\n  \"end_ts\": \"2024-01-15T15:00:00Z\",\n  \"category\": \"busy\",\n  \"description\": \"Weekly team standup\",\n  \"recurrence_rule\": {\n    \"type\": \"weekly\",\n    \"daysOfWeek\": [1, 3, 5],\n    \"until\": null\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/intervals",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals"]
						},
						"description": "Creates a weekly recurring interval. Example: team standup on Monday, Wednesday, Friday."
					},
					"response": []
				},
				{
					"name": "Get Interval by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/intervals/{{intervalId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals", "{{intervalId}}"]
						},
						"description": "Gets a specific interval by ID. User must own the interval."
					},
					"response": []
				},
				{
					"name": "Update Interval",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"start_ts\": \"2024-01-15T10:30:00Z\",\n  \"end_ts\": \"2024-01-15T12:30:00Z\",\n  \"category\": \"busy\",\n  \"description\": \"Updated team meeting\",\n  \"recurrence_rule\": null\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/intervals/{{intervalId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals", "{{intervalId}}"]
						},
						"description": "Updates an existing interval. User must own the interval."
					},
					"response": []
				},
				{
					"name": "Delete Interval",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/intervals/{{intervalId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "intervals", "{{intervalId}}"]
						},
						"description": "Deletes an interval by ID. User must own the interval."
					},
					"response": []
				}
			],
			"description": "Interval management endpoints (CRUD operations)"
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		},
		{
			"key": "intervalId",
			"value": "",
			"type": "string"
		}
	]
}
