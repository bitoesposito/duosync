{
	"info": {
		"_postman_id": "duosync-api-collection",
		"name": "DuoSync API",
		"description": "API collection for DuoSync - Appointment synchronization app",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Appointments",
			"item": [
				{
					"name": "Get Appointments",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/appointments?userId={{userId}}&date={{date}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "appointments"],
							"query": [
								{
									"key": "userId",
									"value": "{{userId}}",
									"description": "User ID (required)"
								},
								{
									"key": "date",
									"value": "{{date}}",
									"description": "Date in YYYY-MM-DD format (optional, defaults to today)"
								}
							]
						},
						"description": "Returns appointments for a specific user and date (defaults to today). Includes both one-time appointments and recurring appointments active on that date."
					}
				},
				{
					"name": "Get Appointments Batch",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/appointments/batch?userIds={{userIds}}&date={{date}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "appointments", "batch"],
							"query": [
								{
									"key": "userIds",
									"value": "{{userIds}}",
									"description": "Comma-separated list of user IDs (required)"
								},
								{
									"key": "date",
									"value": "{{date}}",
									"description": "Date in YYYY-MM-DD format (optional, defaults to today)"
								}
							]
						},
						"description": "Returns appointments for multiple users in parallel. Optimized endpoint that loads appointments for all users in a single request."
					}
				},
				{
					"name": "Get Recurring Templates",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/appointments/recurring?userId={{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "appointments", "recurring"],
							"query": [
								{
									"key": "userId",
									"value": "{{userId}}",
									"description": "User ID (required)"
								}
							]
						},
						"description": "Returns all recurring appointment templates for a specific user (not filtered by date). Used to show recurring appointments in the list even when they're not active today."
					}
				},
				{
					"name": "Add Appointment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": {{userId}},\n  \"appointment\": {\n    \"id\": \"{{appointmentId}}\",\n    \"startTime\": \"{{startTime}}\",\n    \"endTime\": \"{{endTime}}\",\n    \"category\": \"{{category}}\",\n    \"description\": \"{{description}}\",\n    \"isRepeating\": {{isRepeating}},\n    \"repeatDays\": {{repeatDays}}\n  },\n  \"date\": \"{{date}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/appointments/add",
							"host": ["{{baseUrl}}"],
							"path": ["api", "appointments", "add"]
						},
						"description": "Creates a new appointment in the database for a specific user and date. For recurring appointments, set `isRepeating: true` and include `repeatDays` array (1=Monday, 7=Sunday)."
					}
				},
				{
					"name": "Update Appointment",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": {{userId}},\n  \"appointmentId\": \"{{appointmentId}}\",\n  \"appointment\": {\n    \"id\": \"{{appointmentId}}\",\n    \"startTime\": \"{{startTime}}\",\n    \"endTime\": \"{{endTime}}\",\n    \"category\": \"{{category}}\",\n    \"description\": \"{{description}}\",\n    \"isRepeating\": {{isRepeating}},\n    \"repeatDays\": {{repeatDays}}\n  }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/appointments/update",
							"host": ["{{baseUrl}}"],
							"path": ["api", "appointments", "update"]
						},
						"description": "Updates an existing appointment in the database. For recurring appointments, updating affects all instances of that recurring template."
					}
				},
				{
					"name": "Remove Appointment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": {{userId}},\n  \"appointmentId\": \"{{appointmentId}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/appointments/remove",
							"host": ["{{baseUrl}}"],
							"path": ["api", "appointments", "remove"]
						},
						"description": "Deletes an appointment from the database. For recurring appointments, removing a specific date instance removes that day from the repeatDays array. If it's the last day, the entire recurring template is deleted."
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "Returns the list of all users from the database."
					}
				},
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"{{userName}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "Creates a new user in the database."
					}
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": {{userId}},\n  \"name\": \"{{userName}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "Updates an existing user in the database."
					}
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": {{userId}}\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "Deletes a user from the database."
					}
				}
			]
		},
		{
			"name": "Onboarding",
			"item": [
				{
					"name": "Initialize App",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userName\": \"{{adminUserName}}\",\n  \"pin\": \"{{adminPin}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/onboarding",
							"host": ["{{baseUrl}}"],
							"path": ["api", "onboarding"]
						},
						"description": "Initializes the app by creating initial settings with admin PIN and the first user (Admin). This endpoint should only be called once during app setup."
					}
				}
			]
		},
		{
			"name": "Admin",
			"item": [
				{
					"name": "Admin Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"pin\": \"{{adminPin}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/auth",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "auth"]
						},
						"description": "Authenticates admin user with PIN. Sets an admin session cookie on success. The cookie is httpOnly and expires after 24 hours."
					}
				}
			]
		}
	]
}
